{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "$": true
    },
    "rules": {
        "indent": [
            2,
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single",
            { "avoidEscape": true }
        ],
        "semi": [
            2,
            "never"
        ],
        "no-console": "off",
        "no-unused-vars": "warn"
    }
}
